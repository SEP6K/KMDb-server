generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model directors {
  movie_id  Int
  person_id Int

  @@id([movie_id, person_id])
}

model movies {
  id    Int @id
  title String
  year  BigInt
}

model people {
  id    Int @id
  name  String
  birth BigInt
}

model ratings {
  movie_id Int @id
  rating   Float @db.Real
  votes    Int
}

model stars {
  movie_id  Int
  person_id Int

  @@id([movie_id, person_id])
}
